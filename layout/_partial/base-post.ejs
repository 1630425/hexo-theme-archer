<article class="post">
    <div class="post-content-box">
        <% if(_hasTitle) { %>
        <div class="post-title">
            <h2 class="title">
            <% if(_isTitleWithLink) { %>
                <% var titleURL = url_for(_page.path); %>
                <a class="post-title-link" href="<%- titleURL %>">
            <% } %>
            <%= _page.title %>
            <% if(_isTitleWithLink) { %>
                </a>
            <% } %>
            </h2>
        </div>
        <% } %>
        <div class="post-content">
            <%- _content %>
        </div>
        <% if(is_post() && _hasToc) { %>
        <%- toc(_content) %>
        <% } %>
        <% if(_hasMeta) { %>
        <div class="post-meta">
            <% if(_page.tags.length) { %>
            <%- partial('base-title-tags', {
                currPost :_page,
                className : 'post-tags'}) %>
            <% } %>
            <div class="post-date-share">
                <div class="post-date">
                    <span class="post-calander iconfont-arch"></span><span class="post-time"><%- date(_page.date, "YYYY-MM-DD") %></span>
                </div>
                <% let postURL; %>
                <% if(is_home()) { %>
                <% postURL = titleURL;%>
                <% } else { %>
                <% postURL = url_for(page.path) }%>
                <div class="post-share iconfont-arch">
                    <ul class="share-box" data-href = "<%- postURL %>" data-title = "<%= _page.title %>" >
                        <li class="to-weibo">分享到微博</li>
                        <li class="to-wechat">分享到微信</li>
                        <li class="to-qq">分享到QQ</li>
                        <li class="to-twitter">分享到twitter</li>
                    </ul>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</article>
